; Blog Advanced - Example configuration
; Copy to config.ini and adjust values for your environment

[database]
db_connection = "mysql"
mysql_host = "db"                 ; e.g. "localhost" or service name in Docker
mysql_port = "3306"
mysql_user = "bloguser"           ; change to your DB user
mysql_pass = "blogpass"          ; change to your DB password
db_name = "blog"                  ; change to your DB name

;[database]
;db_connection = sqlite
;sqlite_db = data/sqlite.db

;[database]
;db_connection = postgres
;postgres_socket = /tmp/postgres.sock
;postgres_host = localhost
;postgres_port = 5432
;postgres_user = bloguser
;postgres_pass = blogpass
;db_name = blog

[profile]
title = "My Blog"
name = "Admin"
pic_small = "static/images/profile.jpg"
pic_big = "static/images/profile_big.jpg"
cover = "static/images/cover.jpg"

[language]
lang = "en"                       ; de|en|fr|...

[components]
highlight = "1"                   ; 1 to enable code highlighting, 0 to disable

[custom]
theme = "theme02"                 ; theme01|theme02|...

[admin]
force_login = "1"                 ; 1 require login to view, 0 public
nick = "admin"
pass = "CHANGE_ME"                ; admin login password

[friends]
; optional section for friend settings

[directories]
images_path = "data/i/"
thumbnails_path = "data/t/"
logs_path = "data/logs/"

[proxy]
; optional proxy settings

[system]
timezone = "Europe/Berlin"
version = "1.42"
debug = ""                        ; leave empty or "1"
logs = "1"                        ; 1 to enable logging
SOFT_DELETE = ""                  ; "" or "1"
HARD_DELETE_FILES = "1"           ; "1" = delete files on hard delete
AUTO_CLEANUP_IMAGES = ""          ; "" or "1"

[visitor]
enabled = "1"                     ; 1 show visitor-facing page
title = "My Blog"
name = "Admin"
subtitle = ""
lang = "en"
timezone = "Europe/Berlin"

[email]
notifications_enabled = "1"
admin_email = "admin@example.com"         ; change to your admin email
notify_admin_new_comment = "1"
notify_user_approved = "1"
from_email = "noreply@example.com"        ; change to your sender email
from_name = "My Blog"

; UI theme settings (duplicated keys unified here)
theme = "theme02"
theme_mode = "light"                      ; light|dark
theme_mode_override = "0"                 ; "1" disables user toggle (admin override)
