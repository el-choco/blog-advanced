<?php
// Prevent duplicate session start
if (session_status() === PHP_SESSION_NONE) {
}
define('PROJECT_PATH', realpath(__DIR__ . '/../') . '/');
require_once PROJECT_PATH . 'common.php';

// Check if logged in
if (!User::is_logged_in()) {
    header('Location: login.php');
    exit;
}

// Handle actions
$action = $_GET['action'] ?? null;

if ($action === 'create') {
    try {
        $result = Backup::create_full_backup();
        $success_msg = "‚úÖ Backup erfolgreich erstellt: " . $result['backup_name'];
    } catch (Exception $e) {
        $error_msg = "‚ùå Fehler: " . $e->getMessage();
    }
}

if ($action === 'delete' && isset($_GET['name'])) {
    try {
        Backup::delete_backup(['name' => $_GET['name']]);
        $success_msg = "‚úÖ Backup gel√∂scht!";
    } catch (Exception $e) {
        $error_msg = "‚ùå Fehler: " . $e->getMessage();
    }
}

if ($action === 'download' && isset($_GET['name'])) {
    Backup::download_backup(['name' => $_GET['name']]);
    exit;
}

// Get all backups
$backups_data = Backup::get_backups();
$backups = $backups_data['backups'];

function format_bytes($bytes, $precision = 2) {
    $units = ['B', 'KB', 'MB', 'GB'];
    $bytes = max($bytes, 0);
    $pow = floor(($bytes ? log($bytes) : 0) / log(1024));
    $pow = min($pow, count($units) - 1);
    $bytes /= pow(1024, $pow);
    return round($bytes, $precision) . ' ' . $units[$pow];
}
