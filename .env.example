DB_TYPE=mysql
DB_HOST=db
DB_PORT=3306
DB_NAME=blog
DB_USER=bloguser
DB_PASS=blogpass123
DB_CHARSET=utf8mb4

# MySQL Root Password (for phpMyAdmin)
MYSQL_ROOT_PASSWORD=rootpassword

# Web Server
WEB_PORT=3333
PHPMYADMIN_PORT=3334
DB_EXTERNAL_PORT=3307

# Blog Configuration
BLOG_TITLE=My Blog
BLOG_NAME=Admin
BLOG_SUBTITLE=Welcome to my blog
BLOG_LANG=en
BLOG_TIMEZONE=UTC

# Security (CHANGE THESE!)
